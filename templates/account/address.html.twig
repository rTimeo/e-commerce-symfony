{% extends 'base.html.twig' %}

{% block content %}
<a href="{{ path('app_address_add')}}">ajouter une adresse</a>
<h1>mes address</h1>
{% if app.user.addresses|length == 0  %}
<p>pas encore d'adresse <a href="{{ path('app_address_add')}}">cliquez ici</a></p>

{% endif %}
{% for address in app.user.addresses %}
    <div class="card">
  <div class="card-header">
    {{address.name}}
  </div>
  <div class="card-body">
    <h5 class="card-title">{{address.address}}</h5>
    <p class="card-text">
        {{address.address}}, <br>
        
        {{ address.postal}}- {{address.city}} - {{address.country}}

    </p>
    <a href="#" class="btn btn-primary">Modifier</a> <a href="#" class="btn btn-primary">Supprimer l'adresse</a>
  </div>
</div>
    
    
{% endfor %}
{% endblock %}