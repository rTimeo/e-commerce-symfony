{% extends 'base.html.twig' %}

{% block title %}name - connexion{% endblock %}

{% block content %}
<div class="login-content">
<div class="container">
 <h1>Se connecter</h1>
<form method="post">
    {% if error %}
        <p>Email et le mot de passe ne sont pas valide</p>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

   
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail"  autocomplete="email" required autofocus placeholder="Email">
    <input type="password" name="password" id="inputPassword"  autocomplete="current-password" required placeholder="Mot de passe">

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button class="btn btn-lg btn-primary btn-sm" type="submit">
        Se connecter
    </button>
</form>
</div>
</div>
{% endblock %}
