                 <a href="{{ path('product', {'slug':product.slug})}}"> {{product.name}}</a>
                    <img src="/uploads/{{ product.illustration }}" alt="">
                    <span>{{ product.name }}</span>
                    <span>{{ (product.prix / 100)|number_format(2,',','.') }}â‚¬</span>
                    <a href="{{ path('add_to_cart', {'id' : product.id})}}">Ajouter au panier</a>
                </li>
            {% endfor %}
            </ul>
        </div>
    </div>
</div>

{% endblock %}